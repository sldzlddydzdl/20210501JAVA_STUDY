package test;

import java.util.Scanner;



public class Main {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
	      Scanner sc = new Scanner(System.in);
	      
	      int N = sc.nextInt();
	      
	      
	      for(int i = 1; i <= N; i++) {
	    	  for(int k = 1; k <= N-1; k++) {
	    		  System.out.printf(" ");
	    	  }
	    	  for(int j = 1; j <= i; j++) {
	    		  System.out.printf("*");
	    	  }
	    	  System.out.println("");
	      }
	      

	      

	   }
	   
}


