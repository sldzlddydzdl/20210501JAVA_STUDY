		System.out.print("가입할 비밀번호를 입력하세요 : ");
		String userPw = sc.next();
		
		UserIdCheck userIdCheck = new UserIdCheck();
		UserPwCheck userPwCheck = new UserPwCheck();
		
		try {
			if(userIdCheck.IdCheck(userId))
				System.out.println("아이디 생성");
