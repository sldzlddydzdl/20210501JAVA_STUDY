		Scanner score = new Scanner(System.in);
		
		System.out.print("학생이름과 국어점수와 영어점수를 입력하세요 : ");
		String name1 = score.next();
		int kok1 = score.nextInt();
		int english1 = score.nextInt();
		
		int sum1 = kok1 + english1;
		float avg1 = (float)sum1/2;
		
		System.out.print("학생이름과 국어점수와 영어점수를 입력하세요 : ");
		String name2 = score.next();
		int kok2 = score.nextInt();
		int english2 = score.nextInt();
		
		int sum2 = kok2 + english2;
		float avg2 = (float)sum2/2;
		
		System.out.println("===================== 성적표 =====================");
		System.out.println("이름\t국어\t영어\t합계\t평균");
		System.out.println(name1 + "\t" + kok1 + "\t" + english1 + "\t" + sum1 + "\t" + avg1 );
		System.out.println(name2 + "\t" + kok2 + "\t" + english2 + "\t" + sum2 + "\t" + avg2 );
