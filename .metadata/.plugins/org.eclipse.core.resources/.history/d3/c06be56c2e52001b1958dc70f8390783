package test;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sum = 0;
		Scanner input = new Scanner(System.in);

		int n = input.nextInt();
		
		for(int i = 1; i <= n; i++) {
				sum = sum + i;
				
			}

		System.out.println(sum);
				
		
	}

}
